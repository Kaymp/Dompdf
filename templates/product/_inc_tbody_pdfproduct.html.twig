<tbody>
{% set teller = 0 %}
{% set totaal = 0 %}
{% for productId in productId %}
    <tr>
        <td>{{ productId.id }}</td>
        <td>{{ productId.naam }}</td>
        <td>{% if productId.categorie.naam is defined %}{{ productId.categorie.naam }}{% endif %}</td>
        <td>{{ productId.prijs |format_currency('EUR') }}</td>
        {% set teller = teller + 1 %}
        {% set totaal = totaal + productId.prijs %}
    </tr>
{% else %}
    <tr>
        <td colspan="5">no records found</td>
    </tr>
{% endfor %}
<tr>
    <td></td><td></td>
    <td></td><td>Totaal:</td>
    <td>{{ totaal|format_currency('EUR') }}</td>
</tr>
{%  set gemiddelde = totaal/teller %}
<tr>
    <td></td><td></td>
    <td></td><td>Gemiddelde</td>
    <td>{{ gemiddelde|format_currency('EUR') }}</td>
</tr>
</tbody>
